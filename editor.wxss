.block{
    position: relative;
    margin-top:1.17647059em;
}
.block .block__item{
    margin-top: 0;
}
.block__toolbox{
    position: absolute;
    right: 0;
    top:5px;
    z-index: 100;
}
.block__toolbox .icon{
    display: inline-block;
    margin-right: 5px;
}
.block__item>.weui-cell{
    padding: 0;
    position: relative;
}
.block__item .weui-cell:before{
    left:0;
}
.block__sidebar .icon{
    margin:0 auto;
}
.padding{
    padding: 15px 0 !important;
}
.u-textarea{
    height: 100px;
    width: 98%;
    display: block;
    padding: 25px 2% 15px;
    z-index: 1;
}
.block__btns{
    margin-top:20px;
    margin-bottom:80rpx;
}
.u-image{
    width: 100%;
    display: block;
}
